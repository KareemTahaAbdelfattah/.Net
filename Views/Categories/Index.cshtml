@model List<Category>

@section title{
	<h3>
		Categories
	</h3>
}
@if(Model != null && Model.Count() > 0)
{
	<table class="table table-dark table-striped table-bordered">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th>
					Name
				</th>
				<th>
					Description
				</th>
				<th>Editing</th>
				<th>Deleting</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var category in Model)
			{
				<tr>
					<td>@category.CategoryId</td>
					<td>@category.Name</td>
					<td>@category.Description</td>
					<td><a class="btn btn-link btn-outline-dark" asp-controller="categories" asp-action="edit" asp-route-id="@category.CategoryId">Edit</a></td>
					<td><a class="btn btn-link btn-outline-dark" asp-controller="categories" asp-action="delete" asp-route-categoryid="@category.CategoryId" onclick="return confirmDelete()">Delete</a></td>
				</tr>
			}
			@section Scripts{
				<script>
					function confirmDelete() {
						return confirm("Are you sure you wanna delete this category?");
					}
				</script>
			}
		</tbody>
	</table>
	<br />
	<a class="btn btn-primary btn-outline-dark" asp-controller="categories" asp-action="add">Add</a>
}
